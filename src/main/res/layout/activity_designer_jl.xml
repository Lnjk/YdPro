    <LinearLayout
        style="@style/price_ll1"
        android:orientation="vertical">

        <View style="@style/price_view" />

        <LinearLayout
            style="@style/price_ll1"
            android:orientation="horizontal">


            <LinearLayout style="@style/price_ll2">

                <TextView
                    android:id="@+id/tv_designjl_ztid"
                    style="@style/price_name"
                    android:text="所属账套:" />

                <TextView
                    android:id="@+id/et_designjl_zt"
                    style="@style/price_info" />

                <ImageButton
                    android:id="@+id/ib_designjl_account"
                    style="@style/price_button_down" />


            </LinearLayout>
            <LinearLayout style="@style/price_ll2">
                <TextView
                    android:id="@+id/tv_designjl_sjstid"
                    style="@style/price_name"
                    android:text="设计师代号:" />

                <TextView
                    android:id="@+id/et_designjl_sjsdh"
                    style="@style/price_info" />

                <ImageButton
                    android:focusable="true"
                    android:id="@+id/ib_designjl_sjsdh"
                    style="@style/price_button_down" />


            </LinearLayout>


        </LinearLayout>

        <View style="@style/price_view" />
        <LinearLayout
            style="@style/price_ll1"
            android:orientation="horizontal">


            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/design_name"
                    android:text="积分单号:" />
                <TextView
                    android:id="@+id/tv_jfcard"
                    style="@style/design_name"
                    android:hint="自动获取" />


            </LinearLayout>

            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/price_name"
                    android:text="身份证号:" />

                <TextView
                    android:id="@+id/et_designjl_usercard"
                    style="@style/design_editext"
                    android:maxLength="18"
                    />

            </LinearLayout>
        </LinearLayout>

        <View style="@style/price_view" />

        <LinearLayout
            style="@style/price_ll1"
            android:orientation="horizontal">


            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/design_name"
                    android:text="积分类型:" />

                <TextView
                    android:id="@+id/et_designjl_jflx"
                    style="@style/design_editext" />
                <ImageButton
                    android:id="@+id/ib_designjl_jflx"
                    style="@style/price_button_down" />
            </LinearLayout>

            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/price_name"
                    android:text="收支名称:" />

                <EditText
                    android:id="@+id/et_designjl_szmc"
                    android:hint="A-Z"
                    style="@style/design_editext" />

            </LinearLayout>
        </LinearLayout>

        <View style="@style/price_view" />
        <LinearLayout
            style="@style/price_ll1"
            android:orientation="horizontal">


            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/design_name"

                    android:text="来源单号:" />

                <EditText
                    android:id="@+id/et_designjl_lydh"
                    style="@style/design_editext" />

            </LinearLayout>

            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/price_name"

                    android:text="积分日期:" />

                <TextView
                    android:id="@+id/et_designjl_jfrq"
                    style="@style/design_editext" />

            </LinearLayout>
        </LinearLayout>

        <View style="@style/price_view" />
        <LinearLayout
            style="@style/price_ll1"
            android:orientation="horizontal">


            <LinearLayout style="@style/price_ll2">


                <TextView
                    style="@style/design_name"
                    android:text="积分描述:" />

                <EditText
                    android:id="@+id/et_designjl_jfms"
                    style="@style/design_editext" />


            </LinearLayout>


        </LinearLayout>

        <View style="@style/price_view" />
        <LinearLayout
            style="@style/price_ll1"
            android:orientation="horizontal">


            <LinearLayout style="@style/price_ll2">


                <TextView
                    style="@style/design_name"
                    android:text="返利金额:" />

                <EditText
                    android:id="@+id/et_designjl_flje"
                    android:singleLine="true"
                    style="@style/design_editext" />


            </LinearLayout>


        </LinearLayout>

        <View style="@style/price_view" />
        <LinearLayout
            style="@style/price_ll1"
            android:orientation="horizontal">

            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/design_name"
                    android:text="销售积分:" />

                <EditText
                    android:id="@+id/et_designjl_jfbd"
                    android:digits="0123456789"
                    style="@style/design_editext" />


            </LinearLayout>
            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/design_name"
                    android:text="结案标志:" />

                <TextView
                    android:id="@+id/et_designjl_jabz"
                    style="@style/design_editext" />
                <ImageButton
                    android:id="@+id/ib_designjl_jabz"
                    style="@style/price_button_down" />

            </LinearLayout>


        </LinearLayout>



        <View style="@style/price_view" />
        <LinearLayout
            style="@style/price_ll1"
            android:orientation="horizontal">


            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/design_name"
                    android:text="制单人:" />

                <TextView
                    android:id="@+id/et_designjl_zdr"
                    style="@style/design_editext" />

            </LinearLayout>

            <LinearLayout style="@style/price_ll2">

                <TextView
                    style="@style/price_name"
                    android:text="审核人:" />

                <TextView
                    android:id="@+id/et_designjl_shr"
                    style="@style/design_editext" />

            </LinearLayout>
        </LinearLayout>



        <View style="@style/price_view" />

    </LinearLayout>
