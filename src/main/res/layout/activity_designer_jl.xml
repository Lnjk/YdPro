<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_touch_vip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/smallbk"
    android:orientation="vertical">

    <include layout="@layout/headall" />

    <LinearLayout
        style="@style/price_ll1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_designjl_add"
            style="@style/price_button"
            android:text="新增" />

        <Button
            android:id="@+id/btn_designjl_del"
            style="@style/price_button"
            android:text="删除" />

        <Button
            android:id="@+id/btn_designjl_reset"
            style="@style/price_button"
            android:text="修改" />



    </LinearLayout>
    <LinearLayout
        style="@style/price_ll1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_designjl_query"
            style="@style/price_button"
            android:text="查询" />

        <Button
            android:id="@+id/btn_designjl_sh"
            style="@style/price_button"
            android:text="审核" />

        <Button
            android:id="@+id/btn_designjl_save"
            style="@style/price_button"
            android:text="保存" />


    </LinearLayout>


    <!-- <ScrollView
         android:id="@+id/scrollView1"
