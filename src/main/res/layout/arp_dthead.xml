                    <TextView
                        android:id="@+id/three_money"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="未结金额" />
                </LinearLayout>
            </com.example.LeftOrRight.MyHScrollView>
        </com.example.LeftOrRight.InterceptScrollContainer>

        <com.example.LeftOrRight.InterceptScrollContainer
            android:id="@+id/scroollContainter_four"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/one_zt"
            android:focusable="false">

            <com.example.LeftOrRight.MyHScrollView
                android:id="@+id/horizontalScrollView_four"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <View
