<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/one_zt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="账套名称"
            android:visibility="gone"/>


        <com.example.LeftOrRight.InterceptScrollContainer
            android:id="@+id/scroollContainter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/one_zt"
            android:focusable="false">

            <com.example.LeftOrRight.MyHScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/color_dark_grey" />

                    <TextView
                        android:id="@+id/one_time"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="应收年月" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/color_dark_grey" />

                    <TextView
                        android:id="@+id/one_money"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="未结金额" />
                </LinearLayout>
            </com.example.LeftOrRight.MyHScrollView>
        </com.example.LeftOrRight.InterceptScrollContainer>

        <com.example.LeftOrRight.InterceptScrollContainer
            android:id="@+id/scroollContainter_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/one_zt"
            android:focusable="false">

            <com.example.LeftOrRight.MyHScrollView
                android:id="@+id/horizontalScrollView_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/color_dark_grey" />

                    <TextView
                        android:id="@+id/two_jg"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="单一机构" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/color_dark_grey" />

                    <TextView
                        android:id="@+id/two_time"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="应收年月" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/color_dark_grey" />

                    <TextView
                        android:id="@+id/two_money"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="未结金额" />
                </LinearLayout>
            </com.example.LeftOrRight.MyHScrollView>
        </com.example.LeftOrRight.InterceptScrollContainer>

        <com.example.LeftOrRight.InterceptScrollContainer
            android:id="@+id/scroollContainter_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
