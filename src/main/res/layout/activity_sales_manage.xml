<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smallbk"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/headall" />

    <Button
        android:id="@+id/btn_sales_sell"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:background="@drawable/buttons"
        android:text="报价管理"
        android:onClick="offer"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_sales_form"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_sales_sell"
        android:layout_below="@+id/btn_sales_sell"
        android:layout_marginTop="54dp"
        android:background="@drawable/buttons"
        android:text="订单管理"
        android:textSize="20sp" />

</RelativeLayout>