<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/ib_reset_ald"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@color/transparent"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用户信息"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户编号 :"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/et_yhbh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="用户编号"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名称:"
                android:textSize="12.0sp" />

            <EditText
                android:id="@+id/et_yhmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="用户名称"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3.0dip"
        android:background="#ff808080" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户密码:"
                android:textSize="12.0sp" />

            <EditText
                android:id="@+id/et_yhpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="用户密码"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码:"
                android:textSize="12.0sp" />

            <ImageView
                android:id="@+id/img_yhewm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:src="@drawable/dj" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3.0dip"
        android:background="#ff808080" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备码:"
                android:textSize="12.0sp" />

            <EditText
                android:id="@+id/et_yhmrsbm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="设备码"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签章密码:"
                android:textSize="12.0sp" />

            <EditText
                android:id="@+id/et_yhmrqzmm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="签章密码"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3.0dip"
        android:background="#ff808080" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/ib_account_set"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/et_yhmrzt"
                android:background="@android:color/transparent"
                android:src="@drawable/xialabuttons" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_yhmrzt"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="默认账套:"
                android:textSize="12.0sp" />

            <EditText
                android:id="@+id/et_yhmrzt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView1"
                android:background="@null"
                android:ellipsize="end"
                android:ems="10"
                android:singleLine="true"
                android:text="默认账套"
                android:textSize="12.0sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3.0dip"
        android:background="#ff808080" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView1_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_yhmrbm"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="默认部门:"
                android:textSize="12.0sp" />

            <EditText
                android:id="@+id/et_yhmrbm"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView1_b"
                android:background="@null"
                android:ellipsize="end"
                android:ems="10"
                android:singleLine="true"
                android:text="默认部门"
                android:textSize="12.0sp" >

                <requestFocus />
            </EditText>

            <ImageButton
                android:id="@+id/ib_dep_set"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/et_yhmrbm"
                android:background="@android:color/transparent"
                android:src="@drawable/xialabuttons" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3.0dip"
        android:background="#ff808080" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView1_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_yhmrkh"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="默认客户:"
                android:textSize="12.0sp" />

            <EditText
                android:id="@+id/et_yhmrkh"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView1_c"
                android:background="@null"
                android:ellipsize="end"
                android:ems="10"
                android:singleLine="true"
                android:text="默认客户"
                android:textSize="12.0sp" >

                <requestFocus />
            </EditText>

            <ImageButton
                android:id="@+id/ib_cust_set"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/et_yhmrkh"
                android:background="@android:color/transparent"
                android:src="@drawable/xialabuttons" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3.0dip"
        android:background="#ff808080" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView1_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_yhmryh"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="默认用户:"
                android:textSize="12.0sp" />

            <EditText
                android:id="@+id/et_yhmryh"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView1_y"
                android:background="@null"
                android:ellipsize="end"
                android:ems="10"
                android:singleLine="true"
                android:text="默认用户"
                android:textSize="12.0sp" >

                <requestFocus />
            </EditText>

            <ImageButton
                android:id="@+id/ib_user_set"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/et_yhmryh"
                android:background="@android:color/transparent"
                android:src="@drawable/xialabuttons" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3.0dip"
        android:background="#ff808080" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView1_qz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_yhmrqz"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:text="用户签章:"
                android:textSize="12.0sp" />

            <EditText
                android:id="@+id/et_yhmrqz"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView1_qz"
                android:background="@null"
                android:ellipsize="end"
                android:ems="10"
                android:singleLine="true"
                android:text="用户签章"
                android:textSize="12.0sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3.0dip"
        android:background="#ff808080" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_getinfo_mod"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/button"
                android:text="模块权限"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_getinfo_querry"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/button"
                android:text="查询权限"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3.0dip"
        android:background="#ff808080" />

    <Button
        android:id="@+id/btn_resetinfo"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="确认" />

</LinearLayout>