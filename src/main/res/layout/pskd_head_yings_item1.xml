<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal"
    android:padding="5.0dip">

    <CheckBox
        android:id="@+id/skdmx_yings_xz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        />

    <View
        android:id="@+id/first_line_xz"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/skdmx_yings_xz"
        android:background="@color/color_dark_grey" />
    <TextView
        android:id="@+id/skdmx_yings_xh_item"
        style="@style/head_scrow"
        android:gravity="center"
        android:layout_toRightOf="@+id/first_line_xz"
        android:hint="0" />

    <View
        android:id="@+id/first_line"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/skdmx_yings_xh_item"
        android:background="@color/color_dark_grey" />

    <TextView
        android:id="@+id/skdmx_yings_khbh_item"
        style="@style/head_scrow"
        android:layout_toRightOf="@+id/first_line"
        android:gravity="center"
        android:hint="KH001" />

    <View
        android:id="@+id/first_two"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/skdmx_yings_khbh_item"
        android:background="@color/color_dark_grey" />

    <TextView
        android:id="@+id/skdmx_yings_khmc_item"
        style="@style/head_scrow"
        android:layout_toRightOf="@+id/first_two"
        android:gravity="center"
        android:hint="李宁" />

    <View
        android:id="@+id/first_three"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/skdmx_yings_khmc_item"
        android:background="@color/color_dark_grey" />

    <com.example.LeftOrRight.SolveClickTouchConflictLayout
        android:id="@+id/scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/first_three"
        android:focusable="false">

        <com.example.LeftOrRight.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_skdmx_yingsph_item"
                    style="@style/head_scrow"
                    android:hint="ph123" />

                <View style="@style/list_item_cell_seperator_layout" />

                <TextView
                    android:id="@+id/tv_skdmx_yingsdh_item"
                    style="@style/head_scrow"
                    android:hint="dh123" />

                <View style="@style/list_item_cell_seperator_layout" />

                <TextView
                    android:id="@+id/tv_skdmx_djrq_item"
                    style="@style/head_scrow"
                    android:hint="2018-3-28" />

                <View style="@style/list_item_cell_seperator_layout" />
                <TextView
                    android:id="@+id/tv_skdmx_yingsje_item"
                    style="@style/head_scrow"
                    android:hint="100" />

                <View style="@style/list_item_cell_seperator_layout" />

                <TextView
                    android:id="@+id/tv_skdmx_yingsycje_item"
                    style="@style/head_scrow"
                    android:hint="100" />
                <View style="@style/list_item_cell_seperator_layout" />
                <TextView
                    android:id="@+id/tv_skdmx_yingswcjy_item"
                    style="@style/head_scrow"
                    android:hint="0" />
                <View style="@style/list_item_cell_seperator_layout" />
                <EditText
                    android:id="@+id/tv_skdmx_yingsbccx_item"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:background="@null"
                    android:hint="100" />
                <View style="@style/list_item_cell_seperator_layout" />

                <TextView
                    android:id="@+id/tv_skdmx_yingsbz_item"
                    style="@style/head_scrow"
                    android:singleLine="true"
                    android:hint="0" />
                <View style="@style/list_item_cell_seperator_layout" />


            </LinearLayout>
        </com.example.LeftOrRight.MyHScrollView>
    </com.example.LeftOrRight.SolveClickTouchConflictLayout>


</RelativeLayout>