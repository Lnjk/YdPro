<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal"
    android:padding="5.0dip">

    <TextView
        android:id="@+id/designjlmx_xh_item"
        android:gravity="center"
        style="@style/head_scrow_vip"
        android:text="序号" />

    <View
        android:id="@+id/first_line"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/designjlmx_xh_item"
        android:background="@color/color_dark_grey" />


    <com.example.LeftOrRight.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/first_line"
        android:focusable="false">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_jlmx_zt_item"
                style="@style/head_scrow_vipcontent"
                android:text="任务单号" />

            <View style="@style/list_item_cell_seperator_layout" />

            <TextView
                android:id="@+id/tv_jlmx_sjsdh_item"
                style="@style/head_scrow_vipcontent"
                android:text="设计师名称" />

            <View style="@style/list_item_cell_seperator_layout" />


            <TextView
                android:id="@+id/tv_jlmx_sfzh_item"
                style="@style/head_scrow_vipcontent"
                android:text="任务名称" />

            <View style="@style/list_item_cell_seperator_layout" />




        </LinearLayout>
    </com.example.LeftOrRight.InterceptScrollContainer>


</RelativeLayout>