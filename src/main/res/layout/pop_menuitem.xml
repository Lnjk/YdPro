<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0" >

    <RadioGroup
        android:id="@+id/rg_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/saamtn_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售金额" />

        <RadioButton
            android:id="@+id/sbamtn_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货金额" />
        <RadioButton
            android:id="@+id/ssamtn_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售返点" />
        <RadioButton
            android:id="@+id/sdamtn_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售折让" />
        <RadioButton
            android:id="@+id/snamtn_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="净销售额" />
        <RadioButton
            android:id="@+id/sacst_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售成本" />
        <RadioButton
            android:id="@+id/sbcst_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货成本" />
        <RadioButton
            android:id="@+id/sncst_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="净销成本" />
        <RadioButton
            android:id="@+id/sbsamatn_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退返金额" />
        <RadioButton
            android:id="@+id/gp_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售毛利" />
        <RadioButton
            android:id="@+id/gpm_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="毛利率" />
    </RadioGroup>

</RelativeLayout>